<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/podcastFragment">

    <fragment
        android:id="@+id/podcastFragment"
        android:name="com.example.podcast_vk.PodcastFragment"
        android:label="fragment_podcast"
        tools:layout="@layout/fragment_podcast" >
        <action
            android:id="@+id/action_podcastFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.podcast_vk.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
</navigation>